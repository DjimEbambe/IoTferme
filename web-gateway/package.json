{
  "name": "web-gateway",
  "version": "0.1.0",
  "description": "FarmStack web gateway for avion poultry farm management with ERP, twin, KPI, and IoT integration.",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "test": "NODE_ENV=test mocha --loader=esm --timeout 8000 \"tests/**/*.test.js\"",
    "coverage": "NODE_ENV=test nyc --reporter=text --reporter=lcov npm test",
    "seed": "node src/dao/seed/run.js",
    "build:client": "webpack --config webpack.config.js",
    "watch:client": "webpack --watch --config webpack.config.js",
    "build": "npm run build:client"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@influxdata/influxdb3-client": "^1.4.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "csurf": "^1.11.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^5.0.0",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "joi": "^17.11.0",
    "memorystore": "^1.6.7",
    "mongoose": "^7.6.3",
    "mqtt": "^5.2.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pino": "^8.16.0",
    "pino-http": "^8.4.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "undici": "^5.26.2",
    "uuid": "^9.0.1",
    "babylonjs": "^6.31.1",
    "chart.js": "^4.4.4",
    "chartjs-plugin-annotation": "^3.1.0",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.3.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-loader": "^9.1.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-manifest-plugin": "^5.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "css-loader": "^6.8.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "esm": "^3.2.25"
  }
}
