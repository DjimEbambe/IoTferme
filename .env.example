# Global defaults for IotFarm deployment
IOTFARM_ENV=development
NODE_ENV=development
TZ=Africa/Kinshasa
NGINX_TLS_ENABLED=false
IOTFARM_DOMAIN=iotfarm.local
IOTFARM_EMAIL=ops@iotfarm.local

# Shared credentials
# Use stage-specific overrides: MONGO_URI_PRODUCTION, MONGO_URI_STAGING, etc.
MONGO_URI=mongodb://localhost:27017/iotfarm
MONGO_URI_PRODUCTION=mongodb://mongo-prod:27017/iotfarm
MONGO_USER=
MONGO_PASSWORD=
INFLUX_URL=http://localhost:8086
INFLUX_ORG=iotfarm
INFLUX_TOKEN=replace-with-influx-token
INFLUX_BUCKET_RAW=iot_raw
INFLUX_BUCKET_1M=iot_agg_1m
INFLUX_BUCKET_5M=iot_agg_5m
REDIS_URL=redis://localhost:6379
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=iotfarm_worker
MQTT_PASSWORD=replace-with-mqtt-secret
ML_API_KEY=replace-with-ml-api-key
SESSION_SECRET=replace-with-session-secret
CSRF_SECRET=replace-with-csrf-secret

# Service ports
WEB_GATEWAY_PORT=8000
ML_ENGINE_PORT=8002
