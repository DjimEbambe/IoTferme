# Edge-device-stack global defaults
SITE=KIN-GOLIATH
MQTT_URI=mqtts://broker.example.com:8883
MQTT_USERNAME=edge-agent
MQTT_PASSWORD=change-me
MQTT_KEEPALIVE=30
EDGE_AGENT_HOST=127.0.0.1
EDGE_AGENT_PORT=8081
EDGE_AGENT_BIND=127.0.0.1
EDGE_AGENT_BASIC_AUTH_USER=admin
EDGE_AGENT_BASIC_AUTH_PASS=change-me
CBOR_MODE=binary
USE_TLS=true

# Serial gateway defaults
USB_DEVICE=/dev/ttyESP-GW
SERIAL_BAUD=921600

# Storage
SQLITE_PATH=/var/lib/edge-agent/edge.db
RETENTION_DAYS=28

# Command processing
CMD_TIMEOUT_SECONDS=3
CMD_RETRIES=2

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/edge-agent
