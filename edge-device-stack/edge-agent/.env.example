SITE=KIN-GOLIATH
DEVICE_ID=esp32gw-01
MQTT_URI=mqtts://broker.example.com:8883
MQTT_USERNAME=edge-agent
MQTT_PASSWORD=change-me
MQTT_KEEPALIVE=30
MQTT_USE_TLS=true
MQTT_CA_FILE=/etc/ssl/certs/ca-certificates.crt
MQTT_CERT_FILE=
MQTT_KEY_FILE=
MQTT_QOS=1
MQTT_LWT_TOPIC=v1/farm/KIN-GOLIATH/esp32gw-01/status
MQTT_LWT_PAYLOAD={"status":"offline","ts":"${ISO_TS}"}

USB_DEVICE=/dev/ttyESP-GW
SERIAL_BAUD=921600
SERIAL_RETRY_SECONDS=5

SQLITE_PATH=/var/lib/edge-agent/edge.db
RETENTION_DAYS=28
BACKLOG_MAX_BATCH=500
BACKLOG_MAX_RATE=500
BACKLOG_AIM_QOS1=true

EDGE_BIND_HOST=127.0.0.1
EDGE_BIND_PORT=8081
EDGE_BIND_LAN=false
EDGE_BASIC_AUTH_USER=admin
EDGE_BASIC_AUTH_PASS=change-me

TIME_SYNC_INTERVAL_HOURS=6
CMD_TIMEOUT_SECONDS=3
CMD_MAX_RETRIES=2
CMD_RETRY_BACKOFF_SECONDS=2

LOG_LEVEL=INFO
LOG_JSON=true
LOG_DIR=/var/log/edge-agent
